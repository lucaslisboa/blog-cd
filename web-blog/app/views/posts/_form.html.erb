<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

  <div class="field">
    <%= f.label "Imagem" %>
    <%= f.text_field :image_post, class: "form-control" %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label "Título" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Subtítulo" %>
    <%= f.text_field :subtitle, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Imagem" %>
    <%= f.file_field :image_post %>
  </div>

  <div class="field">
    <%= f.label "Texto" %>
    <%= f.text_area :body_text,  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Autor" %>
    <!-- <%= f.number_field :user_id %> -->
    <%= f.select :user_id, @users, {prompt: "Selecione um autor"} %>
  </div>

  <div class="field">
    <%= f.label "Categoria" %>
    <!-- <%= f.number_field :category_id %> -->
    <%= f.select :category_id, @categories, {prompt: "Selecione uma categoria"} %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Salvar", class:"btn btn-success btn-sm" %>
    <%= link_to 'Show', @post, class:"btn btn-info btn-sm" %>
    <%= link_to 'Back', posts_path, class:"btn btn-danger btn-sm" %>
  </div>
<% end %>
